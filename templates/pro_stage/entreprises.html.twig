{% extends 'base.html.twig' %}


{% block titre %}<H1>Entreprises ayant propos√©es un stage</H1>{% endblock %}
{% block contenu %}
{% set compteur = 1 %}
{% for entreprise in lesEntreprises %}
{%if entreprise.stages is empty %}
{# Je ne fais rien #}
{% else %}
<div class="card border-info mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      {%if compteur == 1 %}
      <img src="/img/ent1.png"  width=25% margin-left="25px">
      {% set compteur = 2 %}
      {% elseif compteur == 2 %}
      <img src="/img/ent2.png"  width=25% margin-left="25px">
      {% set compteur = 3 %}
      {% else %}
      <img src="/img/ent3.png"  width=25% margin-left="25px">
      {% set compteur = 1 %}
      {% endif %}
    </div>
    <div class="col-md-4">
      <div class="card-body">
        <h5 class="card-title">{{entreprise.nom}}</h5>
        <p class="card-text">{{entreprise.description}}</p>
      </div>
    </div>
    <div class="col-md-4">
        <div class="card-body">
          <br/>
          <a href="{{path('proStage_stages_entreprise',{idEntreprise:entreprise.id})}}" class="btn btn-primary">Consulter les offres</a>
        </div>
    </div>
  </div>
</div>
{% endif %}
{% endfor %}
{% endblock %}
